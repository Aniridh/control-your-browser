# ScreenPilot Research Copilot Environment Variables
# Copy this file to .env and fill in your actual API keys

# Friendliai Configuration (Required)
FRIENDLIAI_API_KEY=your_friendliai_api_key_here
FRIENDLIAI_ENDPOINT=https://api.friendli.ai/v1/chat/completions

# Optional: Custom Friendliai Deployment
# FRIENDLIAI_ENDPOINT=https://api.friendli.ai/v1/deployments/your-endpoint/invoke

# Gemini Configuration (Optional - for fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# Weaviate Configuration (Optional - defaults to local)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Server Configuration
PORT=8000
