# Environment variables for ScreenPilot backend
# Copy this file to .env and fill in your actual values

# OpenAI API Key for embeddings (used by LlamaIndex)
OPENAI_API_KEY=your_openai_api_key_here

# Friendliai API Key for AI reasoning
FRIENDLIAI_API_KEY=your_friendliai_api_key_here

# Weaviate Configuration
# For local Weaviate instance
WEAVIATE_URL=http://localhost:8080

# For Weaviate Cloud (if using cloud instance)
# WEAVIATE_URL=https://your-cluster-url.weaviate.network
# WEAVIATE_API_KEY=your_weaviate_api_key_here

# Optional: Customize embedding model
EMBEDDING_MODEL=text-embedding-ada-002

# Optional: Customize chunk size
CHUNK_SIZE=512
CHUNK_OVERLAP=50
